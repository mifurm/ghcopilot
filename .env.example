# Azure AI Foundry Configuration
# Copy this file to .env and fill in your actual values

# Azure OpenAI / Azure AI Foundry Endpoint
# Example: https://your-resource-name.openai.azure.com/
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint-here

# Azure OpenAI API Key
# Find this in Azure Portal -> Your AI resource -> Keys and Endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Azure OpenAI API Version
# Use the latest stable version or the one your deployment supports
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Deployment Name (Model Deployment)
# This is the name you gave your model deployment in Azure AI Foundry
# Example: gpt-4, gpt-35-turbo, gpt-4o, etc.
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name-here

# Optional: Model name for reference
# Example: gpt-4, gpt-4o, gpt-35-turbo
AZURE_OPENAI_MODEL_NAME=gpt-4

# Optional: Temperature for response generation (0.0 to 1.0)
# Lower values = more focused/deterministic, Higher values = more creative
AZURE_OPENAI_TEMPERATURE=0.7

# Optional: Max tokens for response
AZURE_OPENAI_MAX_TOKENS=1000

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-for-flask-sessions

# Optional: Enable/Disable Azure AI (for testing)
# Set to "false" to use simple keyword-based responses
USE_AZURE_AI=true
